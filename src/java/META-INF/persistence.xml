<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SIInfPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Entidades.Accesorio</class>
    <class>Entidades.Almacen</class>
    <class>Entidades.Area</class>
    <class>Entidades.Componente</class>
    <class>Entidades.Departamento</class>
    <class>Entidades.Entidad</class>
    <class>Entidades.Impresora</class>
    <class>Entidades.Login</class>
    <class>Entidades.Marca</class>
    <class>Entidades.Modelo</class>
    <class>Entidades.Modificacion</class>
    <class>Entidades.Pc</class>
    <class>Entidades.Programas</class>
    <class>Entidades.SO</class>
    <class>Entidades.TAccesorio</class>
    <class>Entidades.TComponente</class>
    <class>Entidades.TConexion</class>
    <class>Entidades.TEquipo</class>
    <class>Entidades.TModificacion</class>
    <class>Entidades.TTonner</class>
    <class>Entidades.Usuario</class>
    <shared-cache-mode>ALL</shared-cache-mode>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/SIInf"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="postgres"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="SIInfPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>SIInf</jta-data-source>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
